{
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "rules": {
    "no-undef": "warn",
    "no-unused-vars": "warn",
    "react-hooks/exhaustive-deps": "warn"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
} 